<config>
	<init>
		<formatDB>false</formatDB>
		<formatES>false</formatES>
	</init>
	<db-config>
		<db-server>
			<db-host>localhost</db-host>
			<db-port>9042</db-port>
			<db-name>prosolo_logs</db-name>
			<db-replication-factor>1</db-replication-factor>
		</db-server>
	</db-config>
	 
	<app-config>
		<app-name>prosolo-analytics</app-name>
	</app-config>
	 
	<scheduler-config>
		<auto-start>false</auto-start>
		<instance-name>ProsoloAnalyticsScheduler</instance-name>
		<thread-count>10</thread-count>
		<job-store-class>org.quartz.simpl.RAMJobStore</job-store-class>
		<collection-prefix>quartzjobs</collection-prefix>
		<quartz-jobs>
			<job>
				<class-name>org.prosolo.bigdata.jobs.AssociationRulesForCompetencesDiscoveryJob</class-name>
				<activated>true</activated>
				<on-startup>true</on-startup>
			</job>
			<job>
				<class-name>org.prosolo.bigdata.jobs.LearningGoalsMostActiveUsersAnalyzerJob</class-name>
				<activated>true</activated>
				<on-startup>true</on-startup>
			</job>
		</quartz-jobs>
	</scheduler-config>
</config>