	<mysql-config>
		<host>localhost</host>
		<port>3306</port>
		<database>prosolo</database>
		<user>root</user>
		<password>root</password>
		<jdbc_driver>com.mysql.jdbc.Driver</jdbc_driver>
	</mysql-config>
	<hibernate-config>
		<dialect>org.hibernate.dialect.MySQL5InnoDBDialect</dialect>
		<show_sql>false</show_sql>
		<max_fetch_depth>0</max_fetch_depth>
		<hbm2ddl_auto>update</hbm2ddl_auto>
		<batch_size>50</batch_size>
		<pool_size>500</pool_size>
		<char_set>UTF-8</char_set>
		<character_encoding>UTF-8</character_encoding>
		<use_unicode>true</use_unicode>
		<autocommit>true</autocommit>
		<release_mode>after_statement</release_mode>
		<use_second_level_cache>true</use_second_level_cache>
		<use_query_cache>true</use_query_cache>
		<use_structured_entries>true</use_structured_entries>
		<factory_class>org.hibernate.cache.EhCacheRegionFactory</factory_class>
	</hibernate-config>


